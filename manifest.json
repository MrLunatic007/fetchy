{
  "manifest_version": 2,
  "name": "Fetchy Download Manager",
  "version": "1.0.0",
  "description": "Intercept downloads and send them to Fetchy Download Manager",
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "permissions": [
    "downloads",
    "nativeMessaging",
    "notifications",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Fetchy Download Manager",
    "default_popup": "popup.html"
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
